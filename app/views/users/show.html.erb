<%=render 'books/list',new_book: @new_book,user: current_user%>


<div>
    <h1>Books</h1>
    <table>
        <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    <%@books.each do |book|%>
    <tr>
        <td><%=image_tag book.user.get_proflie_image("50x50")%></td>
