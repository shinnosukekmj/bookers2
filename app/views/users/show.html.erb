<div class="container">
    <div class="row">
        
        <%=render 'books/list',new_book: @new_book,user: @user%>


        <div class="col-md-8 offset-md-1">
            <h1>Books</h1>
            <table>
                <tr>
                    <th colspan="1"></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            <%@books.each do |book|%>
                <tr>
                    <td>
                        <%=link_to user_path(book.user_id) do%>
                        <%=image_tag book.user.get_proflie_image("50x50")%>
                        <%end%>
                    </td>
                    <td><%=link_to book.title,book_path(book.id)%></td>
                    <td><%=book.body%></td>
                </tr>
            <%end%>
            </table>
        </div>
    </div>
</div>