<div class="container">
    <div class="row">

        <%=render 'list',new_book: @book,user: current_user%>

        <div class="col-md-8 offset-md-1">
            <h1>Books</h1>
                <table>
                <tr>
                    <th colspan="1"></th>
                    <th>Title</th>
                    <th>Opnioin</th>
                </tr>
        
            <% @books.each do |book| %>
                <tr>
                    <td>
                        <%=link_to user_path(book.user_id) do%>
