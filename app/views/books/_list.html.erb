
<div>
    <h1>User info</h1>
    <%=image_tag user.get_proflie_image("100x100")%><br>
    <table>
        <tr>
            <th>name</th>
            <td><%=user.name%></td>
        </tr>
    <tr>
        <th>introduction</th>
        <td><%=user.introduction%></td>
    </tr>
    </table>
    
    <%=link_to edit_user_path(current_user) do%>
    <i class="fas fa-user-cog"></i>
    <%end%>
</div>

<div>
    <h1>New book</h1>
    <%= form_with model: new_book,local:true do |f| %>
    <%=f.label:Title%><br>
    <%= f.text_field:title %><br>
    <%=f.label:Opinion%><br>
    <%= f.text_area:body %><br>
    <%=f.submit'Create Book'%>
    <% end %>
</div>