<div>
    <h1>User info</h1>
    <%=image_tag user.get_proflie_image("100x100")%><br>
    <label>name</label>
    <%=user.name%><br>
    <label>introduction</label>
    <%=user.introduction%><br>
    <%=link_to 'edit',edit_user_path(current_user)%>
</div>

<div>
    <h1>New book</h1>
    <%= form_with model: new_book,local:true do |f| %>
    <label>Title</label>
    <%= f.text_field:title %><br>
    <label>Opinion</label>
    <%= f.text_area:body %><br>
    <%=f.submit'Create Book'%>
    <% end %>
</div>