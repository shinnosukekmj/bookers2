<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%if user_signed_in?%>
      <%=link_to 'Bookers',destroy_user_session_path,method: :delete%>
      <%else%>
      <%=link_to 'Bookers',root_path%>
      <%end%>
      
      <%if user_signed_in?%>
      <li><%=link_to user_path(current_user) do%>
      <i class="fas fa-home"></i>Home
      <%end%>
      </li>
      <li><%=link_to users_path do%>
      <i class="fas fa-users"></i>Users
      <%end%>
      </li>
      <li><%=link_to books_path do%>
      <i class="fas fa-book-open"></i>Books
      <%end%>
      </li>
      <li><%=link_to destroy_user_session_path,method: :delete do%>
      <i class="fas fa-sign-out-alt"></i>Log out
      <%end%>
      </li>
      <%else%>
      <li><%=link_to root_path do%>
      <i class="fas fa-home"></i>Home
      <%end%>
      </li>
      <li><%=link_to about_path do%>
      <i class="fas fa-link"></i>About
      <%end%>
      </li>
      <li><%=link_to new_user_registration_path do%>
      <i class="fas fa-user-plus"></i>Sign up
      <%end%>
      </li>
      <li><%=link_to new_user_session_path do%>
      <i class="fas fa-sign-in-alt"></i>Log in
      <%end%>
      </li>
      <%end%>
    </header>
    <p class="notice"><%=notice%></p>
    <%= yield %>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
